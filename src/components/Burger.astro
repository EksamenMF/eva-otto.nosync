---

<body>
  <header>
    <div class="logo">
      <a href="/"><img src="/img/logo_eva.webp" alt="logo" /></a>
    </div>
    <div class="button-container">
      <a href="/basket"
        ><button class="burger-basket"
          ><img
            src="https://img.icons8.com/?size=100&id=0DBkCUANmgoQ&format=png&color=000000"
            alt=""
          /></button
        ></a
      >
      <button class="burger-menu" id="burgerMenu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </header>

  <div class="overlay hidden" id="overlay"></div>
  <nav id="menu" class="hidden">
    <img src="../img/logo_eva.webp" alt="Logo" />
    <ul>
      <li><a href="../julefrokost">Julefrokost</a></li>
      <li><a href="../eventkalender">Events</a></li>
      <li><a href="../productlist">Produkter</a></li>
      <li><a href="../galleri">Galleri</a></li>
      <li class="last-li"><a href="../aboutus">Om os</a></li>
    </ul>
  </nav>

  <script>
    //@ts-nocheck
    const burgerMenu = document.getElementById("burgerMenu");
    const menu = document.getElementById("menu");
    const overlay = document.getElementById("overlay");

    function toggleMenu() {
      menu.classList.toggle("hidden");
      burgerMenu.classList.toggle("open");
      overlay.classList.toggle("hidden");
    }

    // Klik på burger-menuen åbner/lukker menuen
    burgerMenu.addEventListener("click", toggleMenu);

    // Klik på overlayet lukker menuen, hvis den er åben
    overlay.addEventListener("click", () => {
      if (!menu.classList.contains("hidden")) {
        toggleMenu();
      }
    });
  </script>
</body>

<style>
  body {
    margin: 0;
    font-family: "EB Garamond", serif;
    background-color: #ebe7dc;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1%;
  }

  .button-container {
    display: flex;
    align-items: center;
    gap: 10px; /* Afstand mellem knapperne */
  }

  .burger-basket {
    
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background-color: #094d92;
    border-radius: 10px;
    cursor: pointer;
    border: none;
  }

  .burger-basket img {
    width: 30px; /* Juster ikonets størrelse */
    height: 30px;
    filter: invert(100%); /* Gør ikonet hvidt for at matche farven */
  }
  .burger-menu {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 8%;
    width: 45px;
    height: 45px;
    cursor: pointer;
    border: none;
    background-color: #094d92;
    border-radius: 10px;
    margin-right: 2%;
  }

  .burger-menu span {
    display: block;
    height: 3px;
    width: 100%;
    background-color: #ffffff;
    border-radius: 10px;
    gap: 20px;
  }

  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(5px);
    z-index: 1;
  }

  .overlay.hidden {
    display: none;
  }
  nav {
    background-color: #ebe7dc;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    position: absolute;
    top: 70px;
    right: 0;
    width: 30%;
    z-index: 1;
  }

  img {
    margin-top: 5%;
  }

  nav ul {
    list-style: none;
    padding: 1%;
    margin: 0 10% 10% 10%;
  }

  nav li {
    background-color: #ffffff;
    margin-top: 8%;
    border: 5px solid #ffffff;
    border-radius: 5px;
    box-shadow: 0px 0px 0px 7px rgba(217, 217, 217, 1);
  }

  nav a {
    display: block;
    padding: 1px;
    text-decoration: none;
    color: #094d92;
    font-size: 35px;
    font-weight: bold;
  }

  nav.hidden {
    display: none;
  }

  .last-li {
    margin-bottom: 15%;
  }

  @media (max-width: 800px) {
    nav li {
      margin-top: 15%;
    }
    nav a {
      font-size: 20px;
    }

    img {
      margin-top: 5%;
      max-width: 50%;
    }

    .button-container {
    margin-top: 1%;
  }
    .burger-basket,
  .burger-menu {
    width: 35px;
    height: 35px;
  }

  .burger-basket img {
    max-width: 110%; 
    height: auto;
    
  }

  .burger-menu span {
    height: 2px; 
  }
}
  }
</style>
