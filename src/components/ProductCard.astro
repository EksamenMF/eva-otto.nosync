---
const { data } = Astro.props;
---

<a href={`produkter/${data.slug}`}>
  <article>
    <img src={data.image} alt={data.image} />
    <div class="card-content">
      <h2 class="name">{data.name}</h2>
      <p class="price">{data.pris}</p>
      <p class="description">{data.description}</p>
      <div class="btn-content">
        <button>Tilf√∏j til kurv</button>
      </div>
    </div>
  </article>
</a>

<style>
  * {
    background-color: #ffffff;
    color: #656255;
    text-decoration: none;
  }

  a {
    background-color: #ebe7dc;
  }

  article {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 7%;
    margin-right: 7%;
    margin-bottom: 4%;
    margin-top: 4%;
    max-width: 100%;
    border: 2px solid #ebe7dc;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-family: "EB Garamond", serif;
    background-color: #ebe7dc;
  }

  img {
    width: 100%;
    object-fit: cover;
    display: block;
  }

  .card-content {
    padding: 16px;
    text-align: left;
  }
  .name {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
    margin-bottom: 8px;
  }

  .price {
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 12px;
    display: flex;
    justify-content: space-between; /* Fordeler pladsen mellem name og price */
    align-items: center;
  }
  .description {
    font-size: 0.9rem;
    margin-bottom: 16px;
    opacity: 80%;
  }

  button {
    background-color: #19437d;
    color: #fff;
    font-family: "EB Garamond", serif;
    padding: 2% 38%;
    border-radius: 2px;
    font-size: 1rem;
    font-weight: regular;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #002a80;
  }

  .btn-content {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
